{
    "name": "hiradumi",
    "version": "2.0.0",
    "description": "アスペクト比を維持して幅ぴったりにレイアウトするReactコンポーネント",
    "main": "lib/Hiradumi.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CALIL/hiradumi.git"
    },
    "author": "CALIL Inc.",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/CALIL/hiradumi/issues"
    },
    "homepage": "https://github.com/CALIL/hiradumi#readme",
    "scripts": {
        "start": "vite --open",
        "build": "tsc && vite build",
        "serve": "vite preview",
        "prepare": "npm run prepare:tsc && npm run prepare:tsc && npm run prepare:DefaultItem",
        "prepare:tsc": "tsc ./src/Hiradumi.tsx --outDir ./tmp/ --jsx react",
        "prepare:Hiradumi": "browserify -p esmify ./tmp/Hiradumi.js -o ./lib/Hiradumi.js",
        "prepare:DefaultItem": "browserify -p esmify ./tmp/DefaultItem.js -o ./lib/DefaultItem.js"
    },
    "dependencies": {
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "core-js": "^3.10.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-virtualized-auto-sizer": "^1.0.5",
        "react-window": "^1.8.6",
        "whatwg-fetch": "^3.6.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.7",
        "@babel/preset-env": "^7.8.7",
        "@babel/preset-react": "^7.8.3",
        "@babel/preset-typescript": "^7.13.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@vitejs/plugin-react-refresh": "^1.3.1",
        "babelify": "^10.0.0",
        "browserify": "^17.0.0",
        "esmify": "^2.1.1",
        "pug": "^3.0.2",
        "sass": "^1.35.1",
        "typescript": "^4.3.2",
        "vite": "^2.3.7",
        "vite-plugin-pug": "^0.3.0"
    }
}
